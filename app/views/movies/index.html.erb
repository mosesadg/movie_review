<% if !user_signed_in? %>
 <div class="jumbotron">
   <h1>Favorite Movie Reviews </h1>
   <p>Click to add your movie review</p>
   <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %> </p>
 </div>
<% end %>
<div class="row">
<% @movies.each do|movie| %>
<div class=".col-sm-6 col-md-3">
  <div class="thumbnail">
    <%= link_to (image_tag movie.image.url, class: 'image'), movie %>
  </div>
</div>
<% end%>
</div>
